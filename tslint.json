{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-react-hooks"
  ],
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts"]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "no-any": true,
    "no-null-keyword": true,
    "jsx-boolean-value": [true, "never"],
    "react-hooks-nesting": "error"
  }
}
